import numpy as np
# Создаем матрицу 8 на 8, это наше игровое поле
chessboard = np.tile(np.array([[-1,1],[1,-1]]), (4,4)) 
print(f'Шахматная доска: \n {chessboard}')

# Создаём 8x8 матрицу из нулей, это наши фигуры
chessman = np.zeros((8, 8))

# Случайно выбираем количество ненулевых (от 1 до 32)
chess_nonzero = np.random.randint(1, 33)  


# Выбираем случайные позиции:
# Задаем массив от 0 до 63 (индексы)
flat_indices = np.arange(64)
# Задаем случайные позиции без повторений индексов. 
selected_indices = np.random.choice(flat_indices, chess_nonzero, replace=False)
# Генерируем случайные ненулевые значения (-1 или 1)
values = np.random.choice([-1, 1], chess_nonzero)  
# Присваиваем
chessman.flat[selected_indices] = values

print("Количество ненулевых элементов:", chess_nonzero)
print(f'Игровые фигуры: \n {chessman}')

white = 0 # Количество белых фигур на черных полях 
black = 0 # Количество черных фигур на белых полях 
similarly = 0 # Количество фигур на своих полях

for i in [0,1,2,3,4,5,6,7]:
    for j in [0,1,2,3,4,5,6,7]:
        print(f'i = {i}, j = {j}', i, j)
        if chessboard[i,j]*chessman[i,j] == 1:
            similarly = similarly+1
        if chessboard[i,j]*chessman[i,j] == 0:
            similarly = similarly+0
            white = white+0
            black = black+0
        if chessboard[i,j]*chessman[i,j] == -1:
            if chessboard [i,j] == 1:
                black = black+1
            if chessboard [i,j] == -1:
                white = white+1

print(f'Количество белых фигур на черных полях: {white} \nКоличество черных фигур на белых полях: {black} \nКоличество фигур на своих полях: {similarly}')
